    "version": "0.2.0",
    "configurations": [
        {
            "name": "Local: Run Flask App",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/backend",
            "module": "flask",
            "env": {
                "FLASK_APP": "app.py"
            },
            "args": [
                "run",
                "--debug",
                "--no-debugger"
            ],
            "jinja": true,
            "justMyCode": true
        }
    ]
}